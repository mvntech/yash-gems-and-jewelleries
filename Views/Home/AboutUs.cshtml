@{
    ViewData["Title"] = "About Us";
}

        <!-- Page Title -->
        <section class="flat-spacing-2 pb-0">
            <div class="container">
                <div class="page-title">
                    <div class="breadcrumbs">
                        <ul class="bread-wrap">
                            <li><a href="index-2.html" class="text-main-4 link-secondary">Home</a></li>
                            <li class="br-line w-12 bg-main"></li>
                            <li>About Us</li>
                        </ul>
                        <h1 class="heading fw-normal text-uppercase">
                            welcome to yash
                        </h1>
                    </div>
                    <div class="box-text">
                        <p class="text-main-4">
                            At Yash, we believe jewelry is more than an accessory—it’s a reflection of your story. With a
                            <br class="d-none d-xxl-block">
                            passion for craftsmanship and a commitment to quality, we create timeless pieces that celebrate
                            <br class="d-none d-xxl-block">
                            life’s moments, big and small. From delicate everyday essentials to statement designs, each
                            <br class="d-none d-xxl-block">
                            creation is crafted to inspire and shine for generations.
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <!-- /Page Title -->
        <!-- Brand Intro -->
        <section class="s-brand-intro flat-spacing-6 pb-0">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <div class="col-md-6">
                        <div class="brand-intro_image mb-md-0">
                            <img src="/app/images/section/brand-intro.jpg" data-src="/app/images/section/brand-intro.jpg" alt="" class="lazyload intro-photo">
                            <div class="brand-box">
                                <img src="/app/images/section/item-1.png" data-src="/app/images/section/item-1.png" alt="" class="lazyload">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="brand-intro_subtitle">we are yash</h6>
                        <h2 class="brand-intro_title">
                            very piece of jewelry should feel as special as the moment it represents.
                        </h2>
                        <p class="brand-intro_text">
                            From the delicate curves of a handcrafted ring to the brilliance of a perfectly cut diamond, each piece we create is a
                            reflection of artistry, precision, and emotion. Inspired by beauty, heritage, and modern sophistication, we blend
                            traditional techniques with contemporary designs to bring you jewelry that lasts a lifetime.
                        </p>
                        <span class="br-line"></span>
                        <div class="brand-intro_author flex-sm-nowrap">
                            <div class="author-info">
                                <img src="/app/images/avatar/avt-1.jpg" alt="Author" class="img-author">
                                <div class="info">
                                    <h5 class="name"><a href="#" class="link">John Smith</a></h5>
                                    <span class="duty text-main-4">Founder of Yash</span>
                                </div>
                            </div>
                            <div class="author-signature">
                                <img src="/app/images/section/signature.svg" alt="Signature">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- /Brand Intro -->
        <!-- Established -->
        <section class="s-established flat-spacing-3">
            <div class="container">
                <h2 class="established-title">Established - 1995</h2>
                <p class="established-description mb_16">
                    Siblings John Smith and Carla made a life-changing decision back in 1995: quitting their jobs in Architecture and Finance
                    <br class="d-none d-lg-block">
                    to fulfil their vision of creating an industry-changing jewelry brand. Yash is the result of a balanced combination of the
                    <br class="d-none d-lg-block">
                    creative and business worlds, working together towards the disruption of the jewelry industry.
                </p>
                <p class="established-summary">
                    Headquartered in Sydney, YASH is currently available in more than 2000 points of sale worldwide and has become an
                    <br class="d-none d-lg-block">
                    internationally recognized brand.
                </p>
            </div>
        </section>
        <!-- /Established -->
        <!-- Core Value -->
        <section class="s-core-values">
            <div class="container">
                <div class="values-grid tf-grid-layout md-col-2 xl-col-3">
                    <div class="core-values-image">
                        <img src="/app/images/section/core-value.jpg" data-src="/app/images/section/core-value.jpg" alt="Core Value" class="lazyload">
                    </div>
                    <div class="value-box hightlight">
                        <h4 class="value-title">TIMELESS CRAFTSMANSHIP</h4>
                        <span class="br-line"></span>
                        <p class="value-description">
                            Every piece is meticulously crafted with precision, blending traditional artistry with modern innovation to ensure lasting
                            beauty.
                        </p>
                    </div>
                    <div class="value-box">
                        <h4 class="value-title">EXCEPTIONAL QUALITY</h4>
                        <span class="br-line"></span>
                        <p class="value-description">
                            We source only the finest materials, from radiant gemstones to premium metals, ensuring each creation meets the highest
                            standards.
                        </p>
                    </div>
                    <div class="value-box">
                        <h4 class="value-title">MEANINGFUL DESIGNS</h4>
                        <span class="br-line"></span>
                        <p class="value-description">
                            Our jewelry is more than just an accessory—it’s a symbol of love, milestones, and personal expression, designed to tell
                            your story.
                        </p>
                    </div>
                    <div class="value-box hightlight">
                        <h4 class="value-title">CUSTOMER COMMITMENT</h4>
                        <span class="br-line"></span>
                        <p class="value-description">
                            Your satisfaction is at the heart of everything we do, offering personalized service and lifelong support for every Yash
                            piece.
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <!-- /Core Value -->
        <!-- Fearture -->
        <section class="flat-spacing-3 feature-intro">
            <div class="container">
                <div class="row flex-wrap-reverse">
                    <div class="col-xxl-5 offset-xxl-1 col-md-6 d-flex align-items-center">
