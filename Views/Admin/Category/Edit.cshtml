@model Yash_Gems___Jewelleries.Models.Masters.Category
@{
	ViewData["Title"] = "Edit Category";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Start Container Fluid -->
<div class="container-xxl">

    <div class="row">
        <div class="col-xl-3 col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="bg-light text-center rounded bg-light">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="" class="avatar-xxl" id="previewImage">
                        }
                        else
                        {
                            <img src="/admin/images/product/p-1.png" alt="" class="avatar-xxl" id="previewImage">
                        }
                    </div>
                    <div class="mt-3">
                        <h4 id="previewTitle">@Model.CategoryName</h4>
                        <div class="row mt-2">
                             <div class="col-6">
                                 <p class="mb-1 text-muted">Stock</p>
                                 <h5 class="mb-0" id="previewStock">@Model.Stock</h5>
                             </div>
                             <div class="col-6">
                                 <p class="mb-1 text-muted">Created By</p>
                                 <h5 class="mb-0">Admin</h5>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-9 col-lg-8 ">
             <form asp-action="UpdateCategory" method="post" enctype="multipart/form-data">
                 <input type="hidden" asp-for="CategoryId" />
            
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">General Information</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">

                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label class="form-label">Category Image</label>
                                    <input type="file" name="file" class="form-control" onchange="previewFile()">
                                </div>
                            </div>
                            
                            <div class="col-lg-6">
                                 <div class="mb-3">
                                    <label asp-for="Stock" class="form-label">Stock</label>
                                    <input asp-for="Stock" class="form-control" placeholder="Enter Stock" oninput="updatePreviewCore()">
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <label asp-for="CategoryName" class="form-label">Category Title</label>
                                    <input asp-for="CategoryName" class="form-control" placeholder="Enter Title" oninput="updatePreviewCore()">
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <!-- IsActive Checkbox -->
                             <div class="col-lg-12">
                                <div class="mb-3 form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label">Is Active</label>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="mb-0">
                                    <label asp-for="Description" class="form-label">Description</label>
                                    <textarea asp-for="Description" class="form-control bg-light-subtle" rows="7" placeholder="Type description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               
                <div class="p-3 bg-light mb-3 rounded">
                    <div class="row justify-content-end g-2">
                        <div class="col-lg-2">
                            <button type="submit" class="btn btn-outline-secondary w-100">Save Changes</button>
                        </div>
                        <div class="col-lg-2">
                            <a asp-action="Index" class="btn btn-primary w-100">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

<script>
    function updatePreviewCore() {
        var title = document.getElementById("CategoryName").value;
        var stock = document.getElementById("Stock").value;
        
        document.getElementById("previewTitle").innerText = title ? title : "Category Name";
        document.getElementById("previewStock").innerText = stock ? stock : "0";
    }

    function previewFile() {
        var preview = document.querySelector('#previewImage');
        var file    = document.querySelector('input[type=file]').files[0];
        var reader  = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        }

        if (file) {
            reader.readAsDataURL(file);
        }
    }
</script>

<!-- End Container Fluid -->