@model Yash_Gems___Jewelleries.Controllers.AccountController.ResetPasswordInput
@{
    ViewData["Title"] = "Reset Password";
}

<!-- Page Title -->
<section class="flat-spacing-2 pb-0">
    <div class="container">
        <div class="page-title">
            <div class="breadcrumbs">
                <ul class="bread-wrap">
                    <li><a href="/" class="text-main-4 link-secondary">Home</a></li>
                    <li class="br-line w-12 bg-main"></li>
                    <li>Reset Password</li>
                </ul>
                <h1 class="heading fw-normal text-uppercase">
                    Reset Your Password
                </h1>
            </div>
        </div>
    </div>
</section>
<!-- /Page Title -->
<!-- Reset Password -->
<div class="flat-spacing">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="my-acount-content">
                    <form asp-action="ResetPassword" method="post" class="form-log">
                        @Html.AntiForgeryToken()
                        <input asp-for="Code" type="hidden" />
                        <input asp-for="Email" type="hidden" />
                        
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-content">
                            <fieldset class="tf-field mb-4">
                                <input class="tf-input" asp-for="Email" disabled>
                                <label class="tf-lable">Email</label>
                            </fieldset>

                            <fieldset class="tf-field password-wrapper mb-4">
                                <input class="tf-input password-field" asp-for="Password" placeholder required>
                                <label class="tf-lable">New Password *</label>
                                <span class="toggle-pass icon-show-password"></span>
                            </fieldset>

                            <fieldset class="tf-field password-wrapper mb-4">
                                <input class="tf-input password-field" asp-for="ConfirmPassword" placeholder required>
                                <label class="tf-lable">Confirm Password *</label>
                                <span class="toggle-pass icon-show-password"></span>
                            </fieldset>
                        </div>

                        <button type="submit" class="btn-submit tf-btn btn-fill-2 w-100">
                            RESET PASSWORD
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Reset Password -->